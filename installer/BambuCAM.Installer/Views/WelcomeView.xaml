<UserControl x:Class="BambuCAM.Installer.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#1a1a1a">
        <StackPanel Margin="40">
            <Image Source="/Assets/setup-icon.png" Height="120"/>
            <TextBlock Text="Welcome to BambuCAM"
                     FontSize="24"
                     Foreground="#00ffff"
                     HorizontalAlignment="Center"
                     Margin="0,20"/>
            <TextBlock Text="This wizard will guide you through the installation of BambuCAM."
                     TextWrapping="Wrap"
                     Foreground="#80ffffff"
                     HorizontalAlignment="Center"
                     Margin="0,10"/>
            <Button Content="Begin Installation"
                    Command="{Binding StartInstallCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#00ffff"
                    Foreground="#1a1a1a"
                    HorizontalAlignment="Center"
                    Margin="0,40"/>
        </StackPanel>
    </Grid>
</UserControl> 